<main>
  <section id="schedule" class="bg-dark">
    <div class="outer-container">
      <div class="container">
        <div class="row">
          <div class="col-xl-8 offset-xl-2 col-lg-10 offset-lg-1 text-center logo-container animation" data-animation="fadeInUp" data-animation-delay="0.3s">
            <h1>Norcon</h1>
            <h2>Chico</h2>
            <h3>2019</h3>
            <%= image_tag("logo.png", height: '256') %>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
          <h2 class="title animation" data-animation="fadeInUp" data-animation-delay="0.2s">Norcon 2019 Schedule</h2>
          <p class="animation" data-animation="fadeInUp" data-animation-delay="0.4s">
            Below, you'll find all the talks happening at Idea Fab Labs on April 13, 2019. There's a lot of great stuff here, so start making your plans now!
          </p>
          <table class="nc-schedule animation" data-animation="fadeInUp" data-animation-delay="0.4s">
            <tr>
              <td>
                <div class="schedule-time">
                  <strong>9:00AM</strong>
                  <small>-9:50AM</small>
                </div>
              </td>
              <td>
                <div class="schedule-details">
                  <%= link_to "Improvised Physical Security Tools", speakers_2018_path(anchor: "jeff_toth"), class: "schedule-title" %>
                  <div class="track-circle"></div>
                  <h4 class="schedule-speaker">Jeff Toth</h4>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <div class="schedule-time">
                  <strong>10:00AM</strong>
                  <small>-10:50AM</small>
                </div>
              </td>
              <td>
                <div class="schedule-details">
                  <%= link_to "Certificate Cataloging for Target Footprinting", speakers_2018_path(anchor: "trevor_hartman"), class: "schedule-title" %>
                  <div class="track-circle"></div>
                  <h4 class="schedule-speaker">Trevor Hartman</h4>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <div class="schedule-time">
                  <strong>12:00PM</strong>
                  <small>-12:50PM</small>
                </div>
              </td>
              <td>
                <div class="schedule-details">
                  <div class="schedule-special-container">
                    <span class="special-label">Lunch</span>
                    <div class="fa-track-circle">
                      <i class="fas fa-utensils fa-fw"></i>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </section>
</main>